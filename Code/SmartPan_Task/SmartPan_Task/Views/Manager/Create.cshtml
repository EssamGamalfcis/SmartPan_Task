@model Domain.EmployeesTasks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Manager_Layout.cshtml";
}

<h1>Create</h1>

<h4>EmployeesTasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpId" class="control-label">Employee Name</label>
                <select asp-for="EmpId" class ="form-control" asp-items="ViewBag.EmpId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaskId" class="control-label">Task</label>
                <select asp-for="TaskId" class ="form-control" asp-items="ViewBag.TaskId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaskStatusId" class="control-label">Task Status</label>
                <select asp-for="TaskStatusId" class ="form-control" asp-items="ViewBag.TaskStatusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

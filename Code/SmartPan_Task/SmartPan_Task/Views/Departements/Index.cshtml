@model IEnumerable<Domain.Departements>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Departements_Layout.cshtml";
}
<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<form action="Search" method="post" enctype="multipart/form-data">
    <div class="input-group">
        <input type="text" required class="form-control" placeholder="Search by Departement Name" name="SearchWord">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
    <br /><br />
</form>
<div class="container">
    <div class="row align-content-md-end">
        <p class="text-danger">@ViewBag.ErrorMessage</p>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DepId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

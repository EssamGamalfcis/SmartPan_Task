@model Domain.EmployeesTasks

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Employee_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Task Id</label>
                @Html.TextBoxFor(m => m.TaskId, new { @readonly = "readonly", @class = "form-control" } )
            </div> 
            <div class="form-group">
                <td>
                    <label class="control-label">Task Status</label>
                    @Html.DropDownList("Task_Status", ((List<string>)ViewBag.Tasks_Status).Select(m => new SelectListItem { Text = m, Value = m }), new { @class = "form-control" })

                </td>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

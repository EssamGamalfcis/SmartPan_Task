@model IEnumerable<Domain.Employees>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form action="Search" method="post" enctype="multipart/form-data">

    <div class="input-group">
        <input type="text" required class="form-control" placeholder="Search by First Name" name="SearchWord">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
    <br /><br />
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpFname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpLname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                Manager Full Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.EmpFname)
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.EmpLname)
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.EmpSalary)
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    <img  width="150px" height="150px" src="@item.EmpImage"
                         asp-append-version="true" alt="@item.EmpImage" />
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Dep.DepName)
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.EmpFname)
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Manager.EmpFname)
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    @{
                        var fullName = item.EmpFname + " " + item.EmpLname;
                        @Html.DisplayFor(m => fullName)

                    }
                </td>
                <td align="center" style="text-align: center; vertical-align: middle;">
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.EmpId">Edit</a> <br />
                        <a asp-action="Details" asp-route-id="@item.EmpId">Details</a> <br />
                        <a asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>
